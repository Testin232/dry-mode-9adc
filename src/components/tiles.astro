---
export const hydrate = true;
---

<section class="services-section layout">
  <div class="heading-with-toggle">
    <h2>Explore services</h2>
    <label class="switch">
      <input type="checkbox" id="toggle-details" />
      <span class="slider"></span>
    </label>
  </div>

  <div class="grid" id="tile-grid">
    <slot />
  </div>
</section>

<script type="module">
  setTimeout(() => {
    const toggleEl = document.getElementById('toggle-details');
    const tiles = document.querySelectorAll('#tile-grid .tile');

    if (!toggleEl || tiles.length === 0) return;

    function isExpanded(tile) {
      const details = tile.querySelector('.details');
      return details && details.style.display === 'block';
    }

    function updateSwitchVisualState() {
      const allExpanded = Array.from(tiles).every(isExpanded);
      toggleEl.checked = allExpanded;
    }

    tiles.forEach(tile => {
      tile.addEventListener('click', () => {
        const details = tile.querySelector('.details');
        if (!details) return;
        const isVisible = details.style.display === 'block';
        details.style.display = isVisible ? 'none' : 'block';
        tile.classList.toggle('expanded', !isVisible);
        updateSwitchVisualState();
      });
    });

    toggleEl.addEventListener('change', () => {
      const shouldShow = toggleEl.checked;
      tiles.forEach(tile => {
        const details = tile.querySelector('.details');
        if (!details) return;
        details.style.display = shouldShow ? 'block' : 'none';
        tile.classList.toggle('expanded', shouldShow);
      });
    });
  }, 0);
</script>

<style>
  :global(.services-section) {
    padding: 0;
    margin: 0;
  }

  :global(.heading-with-toggle) {
    display: flex;
    align-items: center; /* âœ… Switch and text aligned */
    gap: 1rem;
    margin-top(var(--heading-margin-top) - 1px);
    margin-bottom: 1rem;
  }

  :global(.heading-with-toggle h2) {
    margin: 0;
  }

  :global(.switch) {
    position: relative;
    display: inline-block;
    width: 50px;
    height: 28px;
  }

  :global(.switch input) {
    opacity: 0;
    width: 0;
    height: 0;
  }

  :global(.slider) {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #ccc;
    border-radius: 34px;
    transition: 0.4s;
  }

  :global(.slider:before) {
    position: absolute;
    content: "";
    height: 20px;
    width: 20px;
    left: 4px;
    bottom: 4px;
    background-color: white;
    transition: 0.4s;
    border-radius: 50%;
  }

  :global(input:checked + .slider) {
    background-color: var(--T1-links);
  }

  :global(input:checked + .slider:before) {
    transform: translateX(22px);
  }

  :global(.grid) {
    display: grid;
    gap: 1rem;
    grid-template-columns: 1fr;
    max-width: 860px;
    margin: 0 auto;
  }

  :global(.tile) {
    padding: 0.75rem;
    background: #CCCCCC;
    border-radius: 10px;
    box-shadow: 0 0 4px rgba(0, 0, 0, 0.1);
    transition: background-color 0.2s ease, border 0.2s ease;
    cursor: pointer;
    color: black;
    border: 2px solid transparent;
  }

  :global(.tile:not(.expanded):hover) {
    background: var(--T1-links);
    color: white;
  }

  :global(.tile.expanded) {
    background: white;
    color: #292929;
    border: 2px solid var(--T1-links);
  }

  :global(.tile.expanded h3,
  .tile.expanded .details) {
    color: #292929;
  }

  :global(.tile h3) {
    font-size: 1.1rem;
    line-height: 1.3;
    margin: 0;
  }

  :global(.tile .details) {
    display: none;
    margin-top: 0.25rem;
    margin-bottom: 0;
    font-size: 0.95rem;
    line-height: 1.4;
  }
</style>
