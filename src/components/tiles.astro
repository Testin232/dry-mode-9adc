---
export const hydrate = true;
---

<section class="services-section layout">
  <div class="heading-with-toggle">
    <h2>Explore services</h2>
    <label class="switch">
      <input type="checkbox" id="toggle-details" />
      <span class="slider"></span>
    </label>
  </div>

  <div class="grid" id="tile-grid">
    <slot />
  </div>
</section>

<script type="module">
  setTimeout(() => {
    const toggleEl = document.getElementById('toggle-details');
    const tiles = document.querySelectorAll('#tile-grid .tile');

    if (!toggleEl || tiles.length === 0) return;

    function isExpanded(tile) {
      const details = tile.querySelector('.details');
      return details && details.style.display === 'block';
    }

    function updateSwitchVisualState() {
      const allExpanded = Array.from(tiles).every(isExpanded);
      toggleEl.checked = allExpanded;
    }

    tiles.forEach(tile => {
      tile.addEventListener('click', () => {
        const details = tile.querySelector('.details');
        if (!details) return;
        const isVisible = details.style.display === 'block';
        details.style.display = isVisible ? 'none' : 'block';
        tile.classList.toggle('expanded', !isVisible);
        updateSwitchVisualState();
      });
    });

    toggleEl.addEventListener('change', () => {
      const shouldShow = toggleEl.checked;
      tiles.forEach(tile => {
        const details = tile.querySelector('.details');
        if (!details) return;
        details.style.display = shouldShow ? 'block' : 'none';
        tile.classList.toggle('expanded', shouldShow);
      });
    });
  }, 0);
</script>

<style>
  :global(.services-section) {
    padding: 0;
    margin: 0;
  }

  :global(.heading-with-toggle) {
    display: flex;
    align-items: center; /* âœ… Switch and text aligned */
    gap: 1rem;
    margin-top(var(--heading-margin-top) - 1px);
    margin-bottom: 1rem;
  }

  :global(.heading-with-toggle h2) {
    margin: 0;
  }

  :global(.switch input) {
    opacity: 0;
    width: 0;
    height: 0;
  }

  :global(.switch) {
    width: 42px;
    height: 24px;
    position: relative;
    display: inline-block;
    position: relative;
    top: -1px;  
  }

  :global(.slider) {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(7, 5, 21, 0.47);
    border: 1px solid rgba(255, 179, 133, 0.2);
    border-radius: 999px;
    transition: 0.4s;
    box-sizing: border-box;
  }

  :global(.slider:before) {
    content: "";
    position: absolute;
    width: 12px;
    height: 12px;
    top: 4px;     /* <-- ðŸ‘ˆ this is the fix */
    left: 4px;
    background-color: #ffb385;
    transition: 0.4s;
    border-radius: 50%;
  }

  :global(input:checked + .slider) {
    background: rgba(7, 5, 21, 0.47);
    border-color: #ffb385;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
  }

  :global(input:checked + .slider:before) {
    transform: translateX(19px); /* adjust visually if needed */
    background-color: #ffb385;
  }

  :global(.grid) {
    display: grid;
    gap: 1rem;
    grid-template-columns: 1fr;
    max-width: 860px;
    margin: 0 auto;
  }

  :global(.tile) {
    background: rgba(7, 5, 21, 0.47);
    border: 1px solid rgba(255, 179, 133, 0.2);
    border-radius: 3px;
    padding: 0.5rem;
    color: #f0f0f0;
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease;
    cursor: pointer;
  }

  :global(.tile:not(.expanded):hover) {
    background: rgba(255, 179, 133, 0.18);
    border-color: #fb985a;
    color: #fff;
  }



  :global(.tile.expanded) {
    background: rgba(7, 5, 21, 0.47);
    border: 1px solid rgba(255, 179, 133, 0.2);
    color: white;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
  }


  :global(.tile.expanded .details) {
    color: white;
  }

  :global(.tile h3) {
    font-family: 'IBM Plex Sans', sans-serif;
    font-weight: 600;
    font-size: 1.125rem;
    text-transform: uppercase;
    color: #ffb385;
    letter-spacing: 0.5px;
    margin: 0;
  }

  :global(.tile .details) {
    display: none;
    margin-top: 0.75rem;
    font-size: 0.95rem;
    line-height: 1.5;
    color: #d8d8d8;
  }

</style>
