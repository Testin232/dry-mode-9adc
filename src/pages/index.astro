---
// Import components and constants
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Tiles from "../components/tiles.astro";
import InitCal from "../components/InitCal.astro";
import InitSubscr from "../components/InitSubscr.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="layout">
    <div class="background-wrapper">
      <Header />

      <main>
        <h1>{SITE_TITLE} is taking shape</h1>
        <p>
          This site is a work in progress. I am currently working on the content and design.
        </p>

        <Tiles>
          <div class="tile">
            <h3>Service A</h3>
            <p class="details">Details about A</p>
          </div>
          <div class="tile">
            <h3>Service B</h3>
            <p class="details">Details about B</p>
          </div>
          <div class="tile">
            <h3>Service C</h3>
            <p class="details">Details about C</p>
          </div>
        </Tiles>
        
        <h2>Contact, Connect & Follow</h2>
        <ul> 
          <li>
            <a href="https://www.linkedin.com/in/teresewahlstrom">LinkedIn</a>
          </li>
          
          <li>
            <a href="#" data-cal-link="teresew/intro" data-cal-namespace="intro" data-cal-config='{"layout":"month_view"}'>
              Book a virtual coffee with me
            </a>
          </li>

          <li>
            <button id="open-subscribe" class="button-to-link">Follow my email list</button>
          </li>
          
          <InitCal />
        </ul>
      </main>
      <InitSubscr />
    </div>
    <Footer />
  </body>
</html>