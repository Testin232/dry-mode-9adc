<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Test2: Cal.com Embed at Bottom</title>
  </head>
  <body style="font-family: sans-serif; padding: 2rem;">
    <h1>Test2: Click the calendar icon</h1>
    <p>Click either the icon or the text below to open the Cal.com pop-up.</p>

    <div style="margin: 1rem 0; font-size: 2rem;">
      <!-- Icon link -->
      <a
        href="#"
        id="cal-icon"
        data-cal-link="teresew/intro"
        data-cal-namespace="intro"
        data-cal-config='{"layout":"month_view"}'
        style="text-decoration: none; cursor: pointer;"
        aria-label="Book a meeting"
      >ðŸ“…</a>

      <!-- Text link -->
      <a
        href="#"
        id="cal-text"
        data-cal-link="teresew/intro"
        data-cal-namespace="intro"
        data-cal-config='{"layout":"month_view"}'
        style="margin-left: 1rem; font-size: 1rem;"
      >Book a virtual coffee with me</a>
    </div>

    <!-- 1) Embed-loader snippet + init, placed after your links -->
    <script type="text/javascript">
      (function (C, A, L) {
        let p = function (a, ar) { a.q.push(ar); };
        let d = C.document;
        C.Cal = C.Cal || function () {
          let cal = C.Cal, ar = arguments;
          if (!cal.loaded) {
            cal.ns = {};
            cal.q = cal.q || [];
            let s = d.createElement("script");
            s.src = A;
            d.head.appendChild(s);
            cal.loaded = true;
          }
          if (ar[0] === L) {
            const api = function () { p(api, arguments); };
            const namespace = ar[1];
            api.q = api.q || [];
            if (typeof namespace === "string") {
              cal.ns[namespace] = cal.ns[namespace] || api;
              p(cal.ns[namespace], ar);
              p(cal, ["initNamespace", namespace]);
            } else {
              p(cal, ar);
            }
            return;
          }
          p(cal, ar);
        };
      })(window, "https://app.cal.com/embed/embed.js", "init");

      // 2) Initialize Cal and "intro"
      Cal("init", { origin: "https://cal.com" });
      Cal("init", "intro");
      Cal.ns.intro("ui", {
        layout: "month_view",
        hideEventTypeDetails: false
      });
    </script>

    <!-- 3) Debug listeners -->
    <script>
      document.getElementById("cal-icon")?.addEventListener("click", () =>
        console.log("Icon clicked!")
      );
      document.getElementById("cal-text")?.addEventListener("click", () =>
        console.log("Text clicked!")
      );
    </script>
  </body>
</html>
