---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const tiles = [
  {
    id: 1,
    title: 'Optimization',
    intro: 'Speed up your processes.',
    details: 'Scripting, automation, and system analysis to remove bottlenecks.',
    color: 'bg-yellow-200'
  },
  {
    id: 2,
    title: '3D Modeling',
    intro: 'From idea to print.',
    details: 'CAD, slicing, and rapid prototyping for real-world results.',
    color: 'bg-green-200'
  },
];
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title="Portfolio | T1 Grid" description="Explore my consulting and software projects" />
  </head>
  <body>
    <Header />
    <main class="max-w-5xl mx-auto px-4 py-8">
      <h1 class="text-4xl font-bold text-center mb-8">Portfolio</h1>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6" id="tiles">
        {tiles.map(tile => (
          <div
            class={`tile p-4 rounded-xl shadow-md cursor-pointer transition-all duration-300 ${tile.color}`}
            data-id={tile.id}
          >
            <h2 class="text-xl font-bold">{tile.title}</h2>
            <p class="text-sm">{tile.intro}</p>
            <p class="tile-details mt-2 text-sm hidden">{tile.details}</p>
          </div>
        ))}
      </div>
    </main>
    <Footer />

    <script type="module" src="/js/tileToggle.js" />
  </body>
</html>
