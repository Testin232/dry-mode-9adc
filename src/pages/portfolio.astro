---
import Layout from '../layouts/BlogPost.astro';

const tiles = [
  {
    id: 1,
    title: 'Optimization',
    intro: 'Speed up your processes.',
    details: 'Scripting, automation, and system analysis to remove bottlenecks.',
    color: 'bg-yellow-200'
  },
  {
    id: 2,
    title: '3D Modeling',
    intro: 'From idea to print.',
    details: 'CAD, slicing, and rapid prototyping for real-world results.',
    color: 'bg-green-200'
  },
  {
    id: 3,
    title: 'Software Dev',
    intro: 'Custom-built tools.',
    details: 'Web apps and integrations to streamline your workflow.',
    color: 'bg-blue-200'
  }
];
---

<Layout
  title="Portfolio"
  description="A sticky-note view of what I can help you with."
  pubDate={new Date('2025-04-23')}
  heroImage="/blog-placeholder-about.jpg"
>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6" id="tiles">
    {tiles.map(tile => (
      <div
        class={`tile p-4 rounded-xl shadow-md cursor-pointer transition-all duration-300 ${tile.color}`}
        data-id={tile.id}
      >
        <h2 class="text-xl font-bold">{tile.title}</h2>
        <p class="text-sm">{tile.intro}</p>
        <p class="tile-details mt-2 text-sm hidden">{tile.details}</p>
      </div>
    ))}
  </div>

  <script type="module" src="/js/tileToggle.js" />
</Layout>
